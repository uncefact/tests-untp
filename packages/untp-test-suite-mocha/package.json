{
  "name": "untp-test-suite-mocha",
  "version": "0.1.0",
  "description": "A reusable Mocha-based testing library for UNTP (United Nations Transparency Protocol) credentials",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "untp-test": "dist/bin/untp-test.js"
  },
  "files": [
    "dist/**/*",
    "example-credentials/**/*"
  ],
  "scripts": {
    "build": "node scripts/generate-test-list.js && tsc",
    "dev": "tsc --watch",
    "build:browser": "npm run build && esbuild src/untp-test/browser-bundle.ts --bundle --outfile=browser-test/browser-bundle.js --format=iife --platform=browser --external:chai --external:mocha --external:ajv --external:ajv-formats",
    "browser-test": "npm run build:browser && http-server browser-test -p 8080 -o",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "untp",
    "verifiable-credentials",
    "testing",
    "mocha",
    "w3c",
    "json-ld",
    "transparency"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.3",
    "@types/node-fetch": "^2.6.12",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chai": "^5.2.1",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "mocha": "^11.7.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "esbuild": "^0.25.8",
    "http-server": "^14.1.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
