{
  "name": "untp-test-suite",
  "version": "0.0.1",
  "description": "Test suite for the UNTP package",
  "main": "./build/index.js",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uncefact/tests-untp"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "test",
    "suite"
  ],
  "bin": {
    "untp": "build/cli/cli.js"
  },
  "scripts": {
    "create:config": "node ./scripts/createConfigFile.js",
    "test": "jest",
    "build": "tsc --build --clean && tsc",
    "watch": "tsc -b --watch",
    "lint": "eslint ."
  },
  "dependencies": {
    "semver": "^7.6.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-typescript": "^7.23.3",
    "babel-plugin-transform-import-meta": "^2.2.1",
    "typescript": "5.1.6"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/__tests__/mocks/"
    ],
    "transform": {
      "\\.[jt]sx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "(.+)\\.js": "$1"
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  }
}
