{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "moduleResolution": "Node"
  },
  "include": [
    "tests/**/*.ts"
  ]
}