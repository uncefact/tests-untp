{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "types": ["cypress", "node"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts", "cypress/**/*.ts"], // Include test files
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"]
}
